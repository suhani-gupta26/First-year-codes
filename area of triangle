#include <stdio.h>
#include <math.h>

int main()
{
      int a,b,c;
      float s,area;
      printf("Enter the three sides of the triangle: ");
      scanf("%d%d%d",&a,&b,&c);
      if( (a+b)>c && (b+c)>a && (a+c)>b )
      {
            s=(a+b+c)/2;
            area=sqrt(s*(s-a)*(s-b)*(s-c));
            printf("The area of the triangle is: %f",area);
      }
      else
            printf("Sum of any 2 sides should be greater than the third side.");
      return 0;
}
