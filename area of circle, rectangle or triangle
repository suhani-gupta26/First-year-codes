#include <stdio.h>
#include <math.h>

int main()
{
        char letter;
        printf("Enter the first letter of the shape you wish to calculate the area of: ");
        scanf("%c",&letter);
        switch(letter){
                case 'c':
                case 'C':
                        {
                                int r;
                                float area;
                                printf("Enter the radius of the circle: ");
                                scanf("%d",&r);
                                area=3.14*r*r;
                                printf("The area of the circle is: %f",area);
                        }
                case 'r':
                case 'R':
                        {
                                float l,b,area;
                                printf("Enter the length and breadth of the rectangle: ");
                                scanf("%f%f",&l,&b);
                                area=l*b;
                                printf("The area of the rectangle is: %f",area);
                        }
                case 't':
                case 'T':
                        {
                                int a,b,c;
                                float s,area;
                                printf("Enter the three sides of the triangle: ");
                                scanf("%d%d%d",&a,&b,&c);
                                s=(a+b+c)/2;
                                area=sqrt(s*(s-a)*(s-b)*(s-c));
                                printf("The area of the triangle is: %f",area);
                        }
                default:
                        printf("You can only choose between triangle, rectangle, or circle.");

        }
        return 0;
}

