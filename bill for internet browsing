#include <stdio.h>

int main()
{
        int calls,category;
        float amt;
        printf("Enter the number of calls you placed: ");
        scanf("%d",&calls);
        if (calls<=100)
                category=1;
        else if (calls>100 && calls<=150)
                category=2;
        else if (calls>150 && calls<=200)
                category=3;
        else 
                category=4;
        switch(category){
                case 1:
                        {
                                amt=200;
                                printf("The bill is: Rs. %.2f"amt);
                        }
                        break;
                case 2:
                        {
                                amt=((calls-100)*0.60)+200;
                                printf("The bill is: Rs. %.2f"amt);
                        }
                        break;
                case 3:
                        {
                                amt=((calls-150)*0.50)+230;
                                printf("The bill is: Rs. %.2f"amt);
                        }
                        break;
                case 4:
                        {
                                amt=((calls-200)*0.40)+255;
                                printf("The bill is: Rs. %.2f"amt);
                        }
                        break;
        }
        return 0;
}
